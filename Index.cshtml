@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Contact Us Messages</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Sender</th>
        <th>Topic</th>
        <th>Date</th>
        <th>View Message</th>
        <th>Delete</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Subject</td>
            <td>@item.MessageDate.ToString("dd.MMM.yyyy")</td>
            <td><a href="#" class="btn btn-outline-dark">View Message</a></td>
            <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>

